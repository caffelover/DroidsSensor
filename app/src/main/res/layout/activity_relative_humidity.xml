<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/sensor_relative_humidty"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView android:text="@string/title_activity_relative_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/orange"
        android:background="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_humidity_name"
        android:background="@color/black"
        android:textColor="@color/orange"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/x_uncalib"
        android:textSize="18dp"
        android:textColor="@color/orange"
        android:background="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/y_uncalib"
        android:textSize="18dp"
        android:textColor="@color/orange"
        android:background="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/z_uncalib"
        android:textSize="18dp"
        android:textColor="@color/orange"
        android:background="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/x_bias"
        android:textSize="18dp"
        android:textColor="@color/orange"
        android:background="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/y_bias"
        android:textSize="18dp"
        android:textColor="@color/orange"
        android:background="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/z_bias"
        android:textSize="18dp"
        android:textColor="@color/orange"
        android:background="@color/black"/>
</LinearLayout>

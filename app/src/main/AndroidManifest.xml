<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caffelover.droidssensor" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Accelerater"
            android:label="@string/title_activity_accelerater" >
        </activity>
        <activity
            android:name=".MagneticField"
            android:label="@string/title_activity_magnetic_field" >
        </activity>
        <activity
            android:name=".Orientation"
            android:label="@string/title_activity_orientation" >
        </activity>
        <activity
            android:name=".Gyroscope"
            android:label="@string/title_activity_gyroscope" >
        </activity>
        <activity
            android:name=".Light"
            android:label="@string/title_activity_light" >
        </activity>
    </application>

</manifest>
